<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    android:fitsSystemWindows="true"
    android:id="@+id/root_view"
    tools:context="com.pplive.testppysdk.WatchStreamingActivity">

    <com.pplive.ppysdk.PPYVideoView
        android:id="@+id/live_player_videoview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/top_container"
        android:gravity="center_vertical">
        <TextView
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingRight="15dp"
            android:paddingLeft="10dp"
            android:background="@drawable/toast_bg_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/liveid"
            android:gravity="center_vertical"
            android:text="房间号: 45678"
            android:textSize="16sp"
            android:textColor="@color/color_FFFEFEFE"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_weight="1"></LinearLayout>
        <ImageButton
            android:layout_width="@dimen/button_small_icon_size"
            android:layout_height="@dimen/button_small_icon_size"
            android:id="@+id/lsq_closeButton"
            android:background="@drawable/close"
            android:layout_marginRight="5dp"
            android:layout_gravity="center_vertical|right"/>
    </LinearLayout>
    <TextView
        android:padding="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/msg_tip"
        android:paddingLeft="10dp"
        android:layout_below="@id/top_container"
        android:text=""
        android:textSize="16sp"
        android:textColor="@color/color_FFFEFEFE"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:orientation="horizontal"
            android:gravity="right">
            <TextView
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingRight="10dp"
                android:paddingLeft="15dp"
                android:background="@drawable/toast_bg_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/msg_live"
                android:gravity="center_vertical"
                android:text="网络差"
                android:visibility="gone"
                android:textSize="16sp"
                android:textColor="@color/color_FFFEFEFE"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:orientation="horizontal"
            android:paddingBottom="10dp"

            android:paddingTop="10dp">
            <TextView
                android:background="@drawable/toast_bg"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:id="@+id/textview_rtmp_play_mode"
                android:gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:textAlignment="center"
                android:text="高清"
                android:visibility="gone"
                android:textSize="16sp"
                android:clickable="true"
                android:textColor="@color/color_FFFEFEFE"/>
            <TextView
                android:background="@drawable/toast_bg"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:id="@+id/textview_play_type"
                android:gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:textAlignment="center"
                android:text="RTMP"
                android:visibility="visible"
                android:textSize="16sp"
                android:clickable="true"
                android:textColor="@color/color_FFFEFEFE"/>
            <Button
                android:layout_width="@dimen/button_small_icon_size"
                android:layout_height="@dimen/button_small_icon_size"
                android:id="@+id/button_data_tip"
                android:layout_marginLeft="10dp"
                android:background="@drawable/data_tip_open"
                />
            <Button
                android:layout_width="@dimen/button_small_icon_size"
                android:layout_height="@dimen/button_small_icon_size"
                android:id="@+id/button_litter_player"
                android:layout_marginLeft="10dp"
                android:background="@drawable/litter_player"
                />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/play_type_control_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_CCF5F5F5"
            android:visibility="visible"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:orientation="horizontal"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:background="@color/color_CCFFFFFF">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/xieyi"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="23sp"
                    android:gravity="center_vertical"
                    android:textColor="@color/color_BF000000"
                    android:text="播放协议"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/color_CCC5C5C5"></LinearLayout>

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:background="@color/color_CCF5F5F5"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                >
                <RadioButton
                    android:layout_width="50dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:textAlignment="center"
                    android:layout_weight="1"
                    android:text="RTMP"
                    android:textSize="@dimen/button_text_size"
                    android:textColor="@color/rtmp_bg_text_color"
                    android:button="@null"
                    android:clickable="true"
                    android:checked="true"
                    android:background="@drawable/button_rtmp_mode_bg"
                    android:id="@+id/RADIO_BUTTON_RTMP"/>
                <RadioButton
                    android:layout_width="50dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:textAlignment="center"
                    android:layout_weight="1"
                    android:text="FLV"
                    android:textSize="@dimen/button_text_size"
                    android:textColor="@color/rtmp_bg_text_color"
                    android:button="@null"
                    android:clickable="true"
                    android:background="@drawable/button_rtmp_mode_bg"
                    android:id="@+id/RADIO_BUTTON_FLV"/>
                <RadioButton
                    android:layout_width="50dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:textAlignment="center"
                    android:layout_weight="1"
                    android:text="HLS"
                    android:textSize="@dimen/button_text_size"
                    android:textColor="@color/rtmp_bg_text_color"
                    android:button="@null"
                    android:clickable="true"
                    android:background="@drawable/button_rtmp_mode_bg"
                    android:id="@+id/RADIO_BUTTON_HLS"/>
            </RadioGroup>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/rtmp_play_mode_control_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_CCF5F5F5"
            android:visibility="gone"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:orientation="horizontal"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:background="@color/color_CCFFFFFF">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/qingxidu"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="23sp"
                    android:gravity="center_vertical"
                    android:textColor="@color/color_BF000000"
                    android:text="清晰度"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/color_CCC5C5C5"></LinearLayout>

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:background="@color/color_CCF5F5F5"
                android:id="@+id/radio_group_container"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                >
                <RadioButton
                    android:layout_width="50dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:textAlignment="center"
                    android:layout_weight="1"
                    android:text="超清"
                    android:textSize="@dimen/button_text_size"
                    android:textColor="@color/rtmp_bg_text_color"
                    android:button="@null"
                    android:clickable="true"
                    android:background="@drawable/button_rtmp_mode_bg"
                    android:id="@+id/RADIO_BUTTON_480P"/>
                <RadioButton
                    android:layout_width="50dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:textAlignment="center"
                    android:layout_weight="1"
                    android:text="高清"
                    android:textSize="@dimen/button_text_size"
                    android:textColor="@color/rtmp_bg_text_color"
                    android:button="@null"
                    android:checked="true"
                    android:clickable="true"
                    android:background="@drawable/button_rtmp_mode_bg"
                    android:id="@+id/RADIO_BUTTON_540P"/>
                <RadioButton
                    android:layout_width="50dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:textAlignment="center"
                    android:layout_weight="1"
                    android:text="标清"
                    android:textSize="@dimen/button_text_size"
                    android:textColor="@color/rtmp_bg_text_color"
                    android:button="@null"
                    android:clickable="true"
                    android:background="@drawable/button_rtmp_mode_bg"
                    android:id="@+id/RADIO_BUTTON_720P"/>
            </RadioGroup>

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
