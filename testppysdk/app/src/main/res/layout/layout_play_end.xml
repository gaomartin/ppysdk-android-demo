<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/popup_bg2"
        android:scaleType="centerCrop"
        android:id="@+id/bg"/>
    <ImageButton
        android:layout_width="@dimen/button_small_icon_size"
        android:layout_height="@dimen/button_small_icon_size"
        android:id="@+id/close"
        android:layout_marginRight="5dp"
        android:background="@drawable/close"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_marginTop="100dp"
        android:id="@+id/center_layout"
        android:gravity="center_horizontal"
        >
        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="1px"
            android:orientation="horizontal"
            android:background="@color/color_7FFFFFFF"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textview_error_msg"
                android:textColor="@color/color_E0FFFFFF"
                android:text="直播已结束"
                android:textSize="34sp"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                />

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="1px"
            android:orientation="horizontal"
            android:background="@color/color_7FFFFFFF"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="50dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:focusable="true"
        android:layout_alignParentBottom="true">
        <Button
            android:background="@drawable/button_focus_bg2"
            android:id="@+id/button_watch_video"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/color_FF04A5EB"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:text="观看回放"
            android:textSize="@dimen/button_text_size"
            />
    </LinearLayout>

</RelativeLayout>
